    <div class="form-group">
        <label for="exampleFormControlSelect1">Doctor</label>
        <select class="form-control text-center" id="doctor_id" name="doctor_id">
                <option value="<%= doctor_id %>">
                    <%= doctor_id %>
                </option>
        </select>
    </div>
</div>



<div class="form-floating mb-1">
    <div class="form-group">
        <label for="exampleFormControlSelect1">Hospital</label>
        <select class="form-control text-center" id="hospital_id" name="hospital_id">
                <option value="<%= hospital_id %>">
                    <%= hospital_id %>
                </option>
        </select>
    </div>
</div>

<div class="form-floating mb-1">
    <div class="form-group">
        <label for="exampleFormControlSelect1">Receptionist</label>
        <select class="form-control text-center" id="receptionist_id" name="receptionist_id">
            <% receptionist_row.forEach((row)=> { %>
                <option value="<%= row.receptionist_id %>">
                    <%= row.receptionist_name %>
                </option>
                <%}) %>
        </select>
