        <!-- END LOADER -->

        <!-- <div class="container-fluid py-5"> -->
            <div class="container-fluid py-3">
            <div class="container">
                <div class="col-12">
                    <div class="row g-0">
                        <div class="col-12 col-sm-13">
                            <!-- <img src="assets/img/login-banner.png" class="img-fluid" alt="Doccure Register">	 -->
                            <img class="img-fluid h-60 py-8" src="../img/login-banner2.png">
                        </div>
                        <div class="col-6 col-sm-5 bg-light text-center rounded px-7 py-5">
                            <h3>Register</h3>
                            <div class="tab-content">
                                <div class="tab-pane fade  show active" id="pills-register" role="tabpanel"
                                    aria-labelledby="tab-register">
                                    <form action="/patient/register" method="POST">
                                        <% if(message) {%>
                                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                                <%= message %>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                        aria-label="Close"></button>
                                            </div>
                                            <% } %>
                                                <!-- Name input -->
                                                <!-- <div class="mx-13 mt-4" style="width: 377px;"> -->
                                                    <div class="mx-4 mt-4" style="width: 377px;">
                                                    <div class="form-floating">
                                                        <input type="text" id="name" name="name" class="form-control"
                                                            required />
                                                        <label class="form-label" for="name">Name</label>
                                                    </div>
                                                </div>

                                                <!-- Username input -->
                                                <!-- <div class="m-5" style="width: 400px;">
                <div class="form-floating mb-3">
                    <input type="text" id="registerUsername" class="form-control" />
                    <label class="form-label" for="registerUsername">Username</label>
                </div>
                </div> -->

                                                <div class="mx-4 mt-2" style="width: 377px;">
                                                    <div class="form-floating">
                                                        <input type="tel" id="mobile" name="mobile" class="form-control"
                                                            pattern="[0]{1}[1]{1}[0-9]{9}" title="01XXX-XXX-XXX"
                                                            required />
                                                        <label class="form-label" for="mobile">Mobile</label>
                                                    </div>
                                                </div>

                                                <!-- Email input -->
                                                <div class="mx-4 mt-2" style="width: 377px;">
                                                    <div class="form-floating">
                                                        <input type="email" id="email" name="email" class="form-control"
                                                            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                                                            title="aa@example.com" required />
                                                        <label class="form-label" for="email">Email</label>
                                                    </div>
                                                </div>

                                                <!-- Password input -->
                                                <div class="mx-4 mt-2" style="width: 377px;">
                                                    <div class="form-floating">
                                                        <input type="password" id="password" name="password"
                                                            onChange="onChange()" class="form-control"
                                                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                                            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                                                            required />
                                                        <label class="form-label" for="password">Password</label>
                                                    </div>
                                                </div>

                                                <!-- Repeat Password input -->
                                                <div class="mx-4 mt-2" style="width: 377px;">
                                                    <div class="form-floating">
                                                        <input type="password" id="confirm" name="confirm"
                                                            onChange="onChange()" class="form-control" />
                                                        <label class="form-label" for="confirm">Confirm
                                                            password</label>
                                                    </div>
                                                </div>

                                                <!-- Submit button -->
                                                <div class="mx-4 mt-3" style="width: 377px;">
                                                    <button type="submit" id="submit"
                                                        class="btn btn-primary btn-block mb-3">Sign
                                                        up</button>
                                                </div>
                                                <div class="mx-4 mt-1">
                                                    <p>Already a member? <a href="/patient/login">Login</a></p>
                                                </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



